# Veritas Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Option 1: Neon DB (Recommended - Cloud PostgreSQL)
# Get connection string from: https://console.neon.tech
# Format: postgresql://username:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-example.neon.tech/veritas_db?sslmode=require

# Option 2: Local PostgreSQL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/veritas_db

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Secret Key (min 32 characters, change in production!)
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-min-32-chars-change-in-production

# Bcrypt rounds for password hashing (higher = more secure but slower)
# 12 is recommended (~100ms per hash)
BCRYPT_ROUNDS=12

# Token expiration times (in seconds)
TOKEN_EXPIRATION=86400        # 24 hours
REFRESH_TOKEN_EXPIRATION=604800  # 7 days

# ========================================
# LOGGING & DEBUG
# ========================================

# Debug mode (True for development, False for production)
DEBUG=True

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# CORS (Cross-Origin Resource Sharing)
# ========================================

# Comma-separated list of allowed origins
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ========================================
# REDIS (Optional, for caching/sessions)
# ========================================

# Redis connection URL (optional)
# REDIS_URL=redis://localhost:6379/0
# For Vercel/cloud: REDIS_URL=redis://default:password@host:6379

# ========================================
# EMAIL (Optional, for notifications)
# ========================================

# SMTP configuration for sending emails
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ========================================
# API CONFIGURATION
# ========================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# API base URL (for generating links in emails, etc.)
API_BASE_URL=http://localhost:8000

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Monitoring event retention (days)
# Events older than this will be archived
MONITORING_RETENTION_DAYS=90

# LLM service configuration (for behavior analysis)
# LLM_API_KEY=sk-...
# LLM_MODEL=gpt-4

# ========================================
# DEPLOYMENT ENVIRONMENT
# ========================================

# Environment name: development, staging, production
ENVIRONMENT=development

# Version tag for monitoring/logging
VERSION=1.0.0

# ========================================
# NEON DB SPECIFIC
# ========================================

# Connection pool size (start with 5 for serverless, increase for dedicated)
# Neon serverless: 5-10
# Neon dedicated: 10-20
# Local PostgreSQL: 20-40
DB_POOL_SIZE=5

# Max overflow connections (on-demand additional connections)
DB_MAX_OVERFLOW=10

# Connection timeout (seconds)
DB_CONNECT_TIMEOUT=10

# Statement timeout (milliseconds)
DB_STATEMENT_TIMEOUT=30000
