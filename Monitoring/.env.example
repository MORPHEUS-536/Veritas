# ============================================================================
# MONITORING MODULE - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=true

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Maximum number of logs to keep in memory
MAX_LOGS_STORED=1000

# Interval for periodic monitoring checks (seconds)
MONITORING_CHECK_INTERVAL=60

# Anomaly detection thresholds (0.0 - 1.0)
# WARNING threshold: trigger warning if score below this
ANOMALY_THRESHOLD_WARNING=0.7

# CRITICAL threshold: trigger critical alert if score below this
ANOMALY_THRESHOLD_CRITICAL=0.9

# ============================================================================
# LLM CONFIGURATION (Optional)
# ============================================================================
# Enable LLM-assisted intelligent monitoring
ENABLE_LLM_MONITORING=false

# LLM Provider: openai, claude, or gemini
LLM_PROVIDER=openai

# API Key for your LLM provider
# OpenAI: https://platform.openai.com/api-keys
# Claude/Anthropic: https://console.anthropic.com/
# Gemini: https://ai.google.dev/
LLM_API_KEY=your-api-key-here

# Model to use for analysis
# OpenAI options: gpt-3.5-turbo, gpt-4, etc.
# Claude options: claude-3-sonnet-20240229, claude-opus-4-1-20250805, etc.
# Gemini options: gemini-pro, gemini-1.5-flash, etc.
LLM_MODEL=gpt-3.5-turbo

# Maximum tokens for LLM response
LLM_MAX_TOKENS=500

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/monitoring.log

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
